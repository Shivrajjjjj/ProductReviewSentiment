@model ProductReviewSentiment.Models.Review

@{
    ViewData["Title"] = "Add Review";
}

<style>
    .form-card {
        max-width: 600px;
        margin: 30px auto;
        background-color: #fdfdfd;
        border-radius: 12px;
        padding: 30px;
        box-shadow: 0 6px 20px rgba(0,0,0,0.1);
    }

        .form-card h2 {
            color: #2c3e50;
            font-weight: bold;
            margin-bottom: 25px;
        }

        .form-card .form-control {
            border-radius: 8px;
        }

    .btn-animate {
        transition: 0.3s ease;
    }

        .btn-animate:hover {
            transform: scale(1.05);
        }
</style>

<div class="form-card">
    <h2>📝 Add a Product Review</h2>

    <form asp-action="Create" method="post">
        <div class="form-group mb-3">
            <label class="form-label">📦 Product Name</label>
            <input asp-for="ProductName" class="form-control" placeholder="e.g. iPhone 15" />
            <span asp-validation-for="ProductName" class="text-danger small"></span>
        </div>

        <div class="form-group mb-4">
            <label class="form-label">💬 Review Content</label>
            <textarea asp-for="Content" class="form-control" rows="4" placeholder="Write your review here..."></textarea>
            <span asp-validation-for="Content" class="text-danger small"></span>
        </div>

        <button type="submit" class="btn btn-success btn-animate">🚀 Submit Review</button>
        <a href="/Review/Index" class="btn btn-outline-secondary ms-2">🔙 Back to Reviews</a>
    </form>
</div>
